<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6D6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/qna_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="QnA 작성"
                android:textColor="#000000"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/qna_modi_btn"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/share_round_popup"
                android:text="수정하기"
                android:textSize="15sp"

                />

            <Button
                android:id="@+id/qna_comment_btn"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/share_round_popup"
                android:text="댓글"
                android:textSize="15sp" />

            <Button
                android:id="@+id/qna_del_btn"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:background="@drawable/share_round_popup"
                android:text="삭제"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/input_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/qna_v_file_btn"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:background="@drawable/share_round_popup"
            android:text="첨부파일"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/qna_v_file_lst"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@drawable/input_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/v_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_comment"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@drawable/input_white" />
    </LinearLayout>

</LinearLayout>